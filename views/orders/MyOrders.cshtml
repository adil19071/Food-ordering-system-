@model IEnumerable<OnlineFoodOrderingSystem.Models.Order>

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.OrderDate</td>
                <td>@o.TotalAmount</td>
                <td>@o.Status</td>
                <td><a class="btn btn-sm btn-primary" href="/Orders/Details/@o.Id">View</a></td>
            </tr>
        }
        </tbody>
    </table>
}
